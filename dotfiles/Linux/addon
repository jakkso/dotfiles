alias lappy='ssh lappy'

###############
## Minecraft ##
###############

mcbackup() {
  echo 'Saving'
  date
  cp -r ~/.minecraft/saves/main-world ~/.minecraft/backup-saves;
}

mcrestore() {
  cp -r ~/.minecraft/saves/main-world ~/.minecraft/backup-saves;
}

mcautorun() {
  while true; do
    mcbackup;
    sleep 60;
  done
}

